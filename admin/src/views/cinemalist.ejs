<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Danh sách rạp phim</title>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Bootstrap Icons -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="/Cinema/Cinema.css">
        <link rel="stylesheet" href="/sideBar.css">
    </head>    
    <body>
        <div class="layout-wrapper">
            <%- include('./components/sidebar') %> 
            <div class="cinema-list flex-grow-1 p-4">
                <h2 class="mb-4">Danh sách rạp phim</h2>
                <!-- Ô tìm kiếm và nút thêm rạp -->
                <div class="d-flex justify-content-between mb-3">
                    <div class="input-group" style="max-width: 300px;">
                        <input type="text" id="search-input" class="form-control" placeholder="Nhập tên rạp">
                        <button class="btn btn-primary" type="button" id="search-button">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                    <button class="btn btn-success" id="add-cinema-btn" data-bs-toggle="modal" data-bs-target="#addCinemaModal">
                        <i class="bi bi-plus"></i> Thêm rạp
                    </button>
                </div>

                <!-- Bảng danh sách rạp -->
                <table class="table table-striped">
                    <thead class="table-secondary">
                        <tr>
                            <th style="width: 20%;">Tên rạp</th>
                            <th style="width: 50%;">Địa chỉ</th>
                            <th style="width: 20%;">Ngày thêm</th>
                            <th style="width: 10%;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody id="cinema-list">
                        <!-- Dữ liệu sẽ được thêm ở đây -->
                        <tr>
                            <td>Rạp A</td>
                            <td>123 Đường ABC, Quận 1, TP.HCM</td>
                            <td>2024-01-01</td>
                            <td>
                                <button class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-three-dots"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>


                <!-- Modal Thêm Rạp -->
                <div class="modal fade" id="addCinemaModal" tabindex="-1" aria-labelledby="addCinemaModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addCinemaModalLabel">Thêm Rạp</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="add-cinema-form">
                                    <div class="mb-3">
                                        <label for="cinema-name" class="form-label">Tên rạp</label>
                                        <input type="text" class="form-control" id="cinema-name" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="cinema-address" class="form-label">Địa chỉ</label>
                                        <input type="text" class="form-control" id="cinema-address" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="cinema-map-address" class="form-label">Địa chỉ map</label>
                                        <textarea class="form-control" id="cinema-map-address" rows="3" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>                                
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>