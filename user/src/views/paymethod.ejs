  <body>
    <!-- NAV -->
    <!-- NAV -->
    <%- include('./components/navbar') %> 
    <!-- Phần thanh toán -->
    <section class="checkout checkout-customer ht">
      <div class="container">
        <div class="checkout-customer-wr">
          <div class="checkout-customer-heading sec-heading" data-aos="fade-up">
            <h2 class="heading !text-center min-[700px]:!text-left">
              Trang thanh toán
            </h2>
            <h3 class="heading !text-center min-[700px]:!text-left">
              Thanh Toán
            </h3>
          </div>
          <div class="checkout-customer-content row">
            <div class="checkout-cus-left col col-6" data-aos="fade-up">
              <div class="form-payment">
                <div class="popup popup-noti">
                  <div class="popup-overlay"></div>
                  <div class="popup-main">
                    <div class="popup-main-wrapper">
                      <div class="popup-over">
                        <div class="popup-wrapper">
                          <div class="popup-noti-wr">
                            <p class="popup-noti-des">
                              Mã khuyến mãi không tồn tại!
                            </p>
                            <div class="popup-noti-ctr">
                              <div class="btn btn--outline">
                                <span class="txt">OK</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="popup-close popupClose">
                      <i class="fas fa-times icon"></i>
                    </div>
                  </div>
                </div>
                <form class="form" action="">
                  <div class="form-list">
                    <div class="form-it inner-radio inner-radio-white">
                      <input
                        class="form-control"
                        type="radio"
                        id="payment1"
                        name="input-checkout-payment"
                        hidden=""
                      />
                      <label class="form-label" for="payment1">
                        <span class="img"
                          ><img src="./assets/momo.png" alt=""
                        /></span>
                        <p class="text">Thanh toán qua Momo</p>
                      </label>
                    </div>
                    <div class="form-it inner-radio inner-radio-white">
                      <input
                        class="form-control"
                        type="radio"
                        id="payment2"
                        name="input-checkout-payment"
                        hidden=""
                      />
                      <label class="form-label" for="payment2">
                        <span class="img"
                          ><img src="./assets/zalo.png" alt=""
                        /></span>
                        <p class="text">Thanh toán qua Zalo Pay</p>
                      </label>
                    </div>
                    <div class="form-it inner-radio inner-radio-white">
                      <input
                        class="form-control"
                        type="radio"
                        id="payment3"
                        name="input-checkout-payment"
                        hidden=""
                      />
                      <label class="form-label" for="payment3">
                        <span class="img"
                          ><img src="./assets/bank.png" alt=""
                        /></span>
                        <p class="text">Thanh toán qua Ngân hàng</p>
                      </label>
                    </div>
                  </div>
                  <div class="btn-discount">
                    <span class="img"
                      ><img src="./assets/discount.png " alt=""
                    /></span>
                    <div class="text">
                      <p class="tt" style="font-size: 18px;">Chọn hoặc nhập mã giảm giá</p>
                      <p class="note">Bạn đang có mã giảm giá</p>
                    </div>
                  </div>
                  <div class="form-it btn-action">
                    <div class="btn btn-submit btn--pri h-[41px]">Quay lại</div>
                    <div class="btn btn-submit btn--pri h-[41px]">
                      Thanh toán
                    </div>
                  </div>
                </form>
              </div>
              <div class="popup popup-gg">
                <div class="popup-overlay"></div>
                <div class="popup-main">
                  <div class="popup-main-wrapper">
                    <div class="popup-over">
                      <div class="popup-wrapper">
                        <div class="popup-gg-wr">
                          <div class="form-discount">
                            <form>
                              <div class="form-list">
                                <div class="subtitle">Áp dụng ưu đãi</div>
                                <div class="form-it popup-gg-search">
                                  <div class="input">
                                    <input
                                      name="inputDiscount"
                                      class="form-control re-input"
                                      type="text"
                                      placeholder="Nhập mã khuyến mãi của bạn"
                                      id="contact-main-fName"
                                      value=""
                                      data-listener-added_9f4c90f2="true"
                                    />
                                  </div>
                                </div>
                                <div class="form-it list-discount">
                                  <div class="inner-radio not-action">
                                    <label class="form-label">
                                      <div class="content">
                                        <p class="tt">C'Ten: 45k phim 2d</p>
                                        <p class="note">
                                          Xem phim trước 10h sáng và sau 10h tối
                                        </p>
                                      </div>
                                    </label>
                                  </div>
                                  <div class="inner-radio not-action">
                                    <label class="form-label">
                                      <div class="content">
                                        <p class="tt">C'Member: 45k phim 2d</p>
                                        <p class="note">
                                          Thành viên Cinestar vào ngày thứ 4
                                          hàng tuần
                                        </p>
                                      </div>
                                    </label>
                                  </div>
                                  <div class="inner-radio not-action">
                                    <label class="form-label">
                                      <div class="content">
                                        <p class="tt">C'Monday: 45k phim 2d</p>
                                        <p class="note">
                                          Các suất chiếu vào ngày thứ 2 hàng
                                          tuần
                                        </p>
                                      </div>
                                    </label>
                                  </div>
                                </div>
                              </div>
                            </form>
                            <a
                              class="text-[#0F172A] w-full flex justify-center mt-[4px] underline"
                              href="/chuong-trinh-khuyen-mai/"
                            >
                              Chú ý mọi chi tiết khuyến mãi</a
                            >
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="popup-close">
                  <i class="fas fa-times icon"></i>
                </div>
              </div>
            </div>

            <div class="checkout-cus-right col col-6" data-aos="fade-up">
              <div class="form-checkout-cus">
                <div class="form-main">
                  <div class="inner-info">
                    <div class="inner-info-row"><p class="tt"></p></div>
                  </div>
                  <div class="inner-info">
                    <div class="inner-info-row cinestar-br">
                      <p class="ct"><%= cinema.name %></p>
                      <p class="dt"><%= cinema.address %></p>
                    </div>
                  </div>
                  <div class="inner-info">
                    <div class="inner-info-row corn-drink">
                      <p class="tt" style="color: #f1c40f"><%= snack.name %></p>
                      <p class="ct"><%= snack.quantity %></p>
                    </div>
                  </div>
                </div>
                <div class="form-footer">
                  <div class="inner-info">
                    <div class="inner-info-row total">
                      <p class="tt">Số tiền cần thanh toán</p>
                      <p class="ct"><%= totalAmount %></p>
                    </div>
                  </div>
                </div>
                <button class="btn btn-submit btn--pri hide-small" (click)="payment()">Thanh toán</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

