    <section class="checkout checkout-customer ht">
      <div class="container">
        <div class="checkout-customer-wr">
          <div class="checkout-customer-heading sec-heading" data-aos="fade-up">
            <h2 class="heading !text-center min-[700px]:!text-left">
                Trang thanh toán
              </h2>
              <h3 class="heading !text-center min-[700px]:!text-left">
                  Thông tin khách hàng
              </h3>
          </div>
          <div class="checkout-customer-content row">
            <div class="checkout-cus-left col col-6" data-aos="fade-up">
              <div class="form-cus">
                <form class="form">
                  <div class="form-list">
                    <div class="form-it">
                      <div class="relative w-full mb-[10px]">
                        <div class="form-it">
                          <p class="form-label text-[16px] text-[#494949]">
                            Họ và tên <span class="text-error">*</span>
                          </p>
                          <div class="relative">
                            <input
                              type="text"
                              placeholder="Họ và tên"
                              class="form-control input"
                              value=""
                            />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-it">
                      <div class="relative w-full mb-[10px]">
                        <div class="form-it">
                          <p class="form-label text-[16px] text-[#494949]">
                            Số điện thoại <span class="text-error">*</span>
                          </p>
                          <div class="relative">
                            <input
                              type="text"
                              placeholder="Số điện thoại"
                              class="form-control input"
                              value=""
                            />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-it">
                      <div class="relative w-full mb-[10px]">
                        <div class="form-it">
                          <p class="form-label text-[16px] text-[#494949]">
                            Email <span class="text-error">*</span>
                          </p>
                          <div class="relative">
                            <input
                              type="text"
                              placeholder="Email"
                              class="form-control input"
                              value=""
                            />
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="form-it">
                      <div class="checkbox">
                        <input
                          class="check checkbox-input"
                          type="checkbox"
                          id="checkbox-1"
                        /><label
                          class="checkbox-label checkbox-label-custom"
                          for="checkbox-1"
                          ><span class="checkbox-label-custom-sqr"></span>Đảm
                          bảo mua vé đúng số tuổi quy định.</label
                        >
                      </div>
                      <div class="checkbox">
                        <input
                          class="check checkbox-input"
                          type="checkbox"
                          id="checkbox-2"
                        /><label
                          class="checkbox-label checkbox-label-custom"
                          for="checkbox-2"
                          ><span class="checkbox-label-custom-sqr"></span>Đồng ý
                          với <a
                            class="link"
                            target="_blank"
                            href="/dieu-khoan-chung/"
                            >điều khoản của TwoKT.</a
                          ></label
                        >
                      </div>
                    </div>
                    <div class="form-it">
                        <div class="btn btn-submit btn--pri hide-large">
                            <a href="/method-pay">Tiếp tục</a>
                          </div>
                          
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="checkout-cus-right col col-6" data-aos="fade-up">
                <div class="form-checkout-cus">
                  <div class="form-main">
                    <div class="inner-info">
                      <div class="inner-info-row"><p class="tt"></p></div>
                    </div>
                    <div class="inner-info">
                      <div class="inner-info-row cinestar-br">
                        <p class="ct">Sinh viên</p>
                        <p class="dt">Khoa học tự nhiên</p>
                      </div>
                    </div>
                    <div class="inner-info">
                      <div class="inner-info-row corn-drink">
                        <p class="tt" style="color: #f1c40f;">Người lớn và trẻ em</p>
                        <p class="ct">1</p>
                      </div>
                    </div>
                  </div>
                  <div class="form-footer">
                    <div class="inner-info">
                      <div class="inner-info-row total">
                        <p class="tt">Số tiền cần thanh toán</p>
                        <p class="ct">45,000 VNĐ</p>
                      </div>
                    </div>
                  </div>
                  <button class="btn btn-submit btn--pri hide-small" (click)="payment()">Thanh toán</button>
                </div>
              </div>
          </div>
        </div>
